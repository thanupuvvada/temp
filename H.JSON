function convert() {
  let celsius = parseFloat(document.getElementById("celsius").value);
  let fahrenheit = (celsius * 9/5) + 32;
  let kelvin = celsius + 273.15;
  document.getElementById("output").innerHTML = `${celsius.toFixed(2)}°C = ${fahrenheit.toFixed(2)}°F = ${kelvin.toFixed(2)}K`;
}
